class Solution {
public:
    vector<vector<string>> groupAnagrams(vector<string>& strs) {
        vector<vector<string>> output;
        unordered_map<string, vector<string>> out;

        for(auto&& str : strs)
        {
            string s = str; 
            sort(s.begin(), s.end()); 
            out[s].push_back(str);
        }
        
        for(auto&& it : out)
            output.push_back(it.second);
        return output;
    }
};
